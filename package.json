{
  "name": "@beorn/inkx-ui",
  "version": "0.2.0",
  "description": "UI components for Ink/inkx TUI apps - spinners, progress bars, and more",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./cli": {
      "import": "./src/cli/index.ts",
      "types": "./src/cli/index.ts"
    },
    "./react": {
      "import": "./src/react/index.ts",
      "types": "./src/react/index.ts"
    },
    "./wrappers": {
      "import": "./src/wrappers/index.ts",
      "types": "./src/wrappers/index.ts"
    },
    "./ansi": {
      "import": "./src/ansi/index.ts",
      "types": "./src/ansi/index.ts"
    },
    "./utils": {
      "import": "./src/utils/index.ts",
      "types": "./src/utils/index.ts"
    },
    "./progress": {
      "import": "./src/progress/index.ts",
      "types": "./src/progress/index.ts"
    },
    "./display": {
      "import": "./src/display/index.ts",
      "types": "./src/display/index.ts"
    },
    "./input": {
      "import": "./src/input/index.ts",
      "types": "./src/input/index.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "lint": "eslint src",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "ink",
    "inkx",
    "tui",
    "terminal",
    "progress",
    "spinner",
    "cli",
    "react",
    "loading",
    "eta",
    "progress-bar",
    "ui-components"
  ],
  "author": "Beorn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beorn/inkx-ui.git"
  },
  "bugs": {
    "url": "https://github.com/beorn/inkx-ui/issues"
  },
  "homepage": "https://github.com/beorn/inkx-ui#readme",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
