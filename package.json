{
  "name": "@beorn/progressx",
  "version": "0.1.0",
  "description": "Ergonomic progress indicators for Node.js CLI and React TUI apps",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./wrappers": {
      "import": "./dist/wrappers/index.js",
      "types": "./dist/wrappers/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "lint": "eslint src",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "progress",
    "spinner",
    "cli",
    "terminal",
    "tui",
    "react",
    "ink",
    "loading",
    "eta",
    "progress-bar"
  ],
  "author": "Beorn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beorn/progressx.git"
  },
  "bugs": {
    "url": "https://github.com/beorn/progressx/issues"
  },
  "homepage": "https://github.com/beorn/progressx#readme",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.0.0"
  }
}
